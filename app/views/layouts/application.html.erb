<!DOCTYPE html>
<html>
<head>
  <title>Hnclone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
				<%= link_to "HNClone", root_path, :class => "brand" %>
				<ul class="nav">
				  <li class="active"><%= link_to "New Story", new_story_path %></li>
				</ul>
				<ul class="nav pull-right">
					<% if signed_in? %>

						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<%=@current_user.email %> <b class="caret"></b>
							</a>
							<ul class="dropdown-menu">
								<li><%= link_to "My Stories", current_user %></li>
								<li class="divider"></li>
								<li><%= link_to "Logout", signout_path, method: "delete" %></li>
							</ul>
					<% else %>
						<li><%= link_to "Sign up", signup_path %></li>
						<li><%= link_to "Login", signin_path %></li>					
					<% end %>
				</ul>
	    </div>
	  </div>
	</div>



<div class="container">
	<%= render :partial => 'shared/alerts' %>
	<%= yield %>	
</div>
</body>
</html>
