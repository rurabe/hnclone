<% if show_vote(commentable) %>
  <%= link_to votes_path(:vote => { voteable_id: commentable.id, voteable_type: commentable.class.to_s, user_id: current_user.id, value: value } ), :action => "create", :method => :post do %>
    <i class="icon-thumbs-<%= value > 0? "up": "down" %>"></i>
  <% end %>
<% end %>